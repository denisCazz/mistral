---
import Layout from '../layouts/MainLayout.astro';

const categorie = [
  {
    nome: "Programmazione & Manutenzione",
    servizi: [
      {
        titolo: "Programmazione",
        descrizione: "6 tecnici programmatori specializzati per la gestione e personalizzazione degli impianti."
      },
      {
        titolo: "Manutenzione preventiva antincendio",
        descrizione: "Eseguita secondo le normative UNI 9795 e UNI 11224. Al termine di ciascuna visita semestrale vi saranno forniti: rapporto d’intervento, consistenza impianto, registro impianto, memoria evento, foto centrale e batterie, back-up e report di compensazione sporcizia"
      },
      {
        titolo: "Manutenzione antintrusione",
        descrizione: "Visite di manutenzione su impianti antintrusione e TVCC."
      }
    ]
  },
  {
    nome: "Impianti Tecnologici",
    servizi: [
      { titolo: "Impianti elettrici", descrizione: "" },
      { titolo: "Impianti speciali", descrizione: "" },
      { titolo: "Impianti antincendio", descrizione: "Core business aziendale." },
      { titolo: "Impianti antintrusione", descrizione: "" },
      { titolo: "Impianti rivelazione gas", descrizione: "" },
      { titolo: "Impianti spegnimento", descrizione: "" },
      { titolo: "Impianti ospedalieri", descrizione: "" },
      { titolo: "Impianti contapersone", descrizione: "" }
    ]
  },
  {
    nome: "Energia & Comfort",
    servizi: [
      { titolo: "Fotovoltaico", descrizione: "Impianti per industrie e residenze." },
      { titolo: "Pompe di calore", descrizione: "Installazione, manutenzione e fornitura di pompe di calore. Rilascio della documentazione per accedere alle detrazioni fiscali ENEA (libretto impianto, dichiarazione di conformità, garanzia, scheda comunicazione vendita ed intervento, data sheet)" },
      { titolo: "Illuminazione intelligente", descrizione: "Realizzazione impianti luci intelligente con regolazione automatica, il quale garantisce un risparmio assicurato" }
    ]
  },
  {
    nome: "Analisi & Certificazioni",
    servizi: [
      { titolo: "Indagine termografica", descrizione: "Offriamo un servizio secondo le normative UNI 10824-1, UNI EN ISO 9712 e ISO 18434-1. Le rilevazioni vengono effettuate da due tecnici abilitati di secondo livello. Grazie alla stipulazione del report conclusivo, si potrà usufruire dell’agevolazione INAIL" },
      { titolo: "Attestazione e certificazione fibra ottica", descrizione: "" },
      { titolo: "Quadristica", descrizione: "Realizzazione e manutenzione quadri elettrici." },
      { titolo: "Sistemi controllo accessi & elimina code", descrizione: "Gestione accessi e code." }
    ]
  },
  {
    nome: "Fornitura & Ricambi",
    servizi: [
      { titolo: "Fornitura materiale", descrizione: "Materiale e ricambi sempre disponibili." }
    ]
  }
];
---

<Layout title="Servizi | Mistral Impianti" description="Tutti i servizi di Mistral Impianti: programmazione, manutenzione, impianti tecnologici, energia, certificazioni e ricambi.">
  <main class="px-4 pb-16" aria-label="Servizi">
  <section class="relative mx-auto mt-32 max-w-6xl overflow-hidden rounded-[2.5rem] border border-black/10 bg-black text-white" data-animate="fade-up">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.12),_transparent_60%)]"></div>
      <div class="relative grid gap-8 px-8 py-16 md:grid-cols-[1.1fr_0.9fr] md:px-16">
        <div class="space-y-4">
          <p class="text-xs uppercase tracking-[0.3em] text-white/60">Servizi</p>
          <h1 class="text-4xl font-semibold leading-tight">Esperienza, innovazione e professionalità per ogni esigenza impiantistica.</h1>
          <p class="text-sm text-white/70">Programmazione, manutenzione, impianti tecnologici, energia rinnovabile, analisi e certificazioni: ogni progetto è seguito da team dedicati per garantire continuità operativa.</p>
        </div>
        <div class="flex items-end">
          <div class="rounded-2xl border border-white/15 bg-white/5 p-6 text-sm text-white/70">
            <p class="font-semibold text-white">Interventi gestiti end-to-end</p>
            <p class="mt-3">Installazione, messa in servizio e manutenzione programmata con personale certificato.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="mx-auto mt-16 max-w-6xl space-y-16">
      {categorie.map((cat) => (
        <section aria-labelledby={cat.nome.replace(/\s/g, '-') + '-title'} class="rounded-[2.5rem] border border-black/10 bg-white px-6 py-10 shadow-[0_40px_80px_-60px_rgba(0,0,0,0.65)] md:px-12" data-animate="fade-up">
          <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
            <div>
              <h2 id={cat.nome.replace(/\s/g, '-') + '-title'} class="text-3xl font-semibold text-black">{cat.nome}</h2>
              <p class="mt-2 text-sm text-zinc-600">Soluzioni curate nel dettaglio per supportare impianti critici e infrastrutture complesse.</p>
            </div>
            <a href="/contatti" class="inline-flex items-center gap-2 rounded-full border border-black/10 px-4 py-2 text-xs font-medium uppercase tracking-[0.2em] text-black transition hover:bg-black hover:text-white">
              Pianifica una consulenza
            </a>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {cat.servizi.map((servizio) => (
              <article class="group flex h-full flex-col justify-between rounded-2xl border border-black/10 bg-black/5 p-6 transition hover:-translate-y-1 hover:border-black/20 hover:bg-black/10" aria-label={servizio.titolo}>
                <div>
                  <h3 class="text-lg font-semibold text-black group-hover:tracking-[0.02em] transition-all">{servizio.titolo}</h3>
                  {servizio.descrizione && (
                    <p class="mt-3 text-sm text-zinc-600">{servizio.descrizione}</p>
                  )}
                </div>
                <div class="mt-6 flex items-center justify-between text-xs text-zinc-500">
                  <span>Approccio su misura</span>
                  <span class="inline-flex h-8 w-8 items-center justify-center rounded-full border border-black/10">→</span>
                </div>
              </article>
            ))}
          </div>
        </section>
      ))}
    </section>
  </main>
</Layout>
