---
import Layout from '../layouts/MainLayout.astro';

const partners = [
  {
    nome: "SIEMENS",
    logo: "/siemens.jpg",
    descrizione: "Siemens è un leader globale nella tecnologia e nell'ingegneria, fornendo soluzioni innovative per l'industria."
  },
  {
    nome: "VANDERBILT",
    logo: "/vanderbilt.jpg",
    descrizione: "VANDERBILT offre soluzioni di sicurezza e gestione degli accessi per una varietà di settori."
  },
  {
    nome: "NEDAP",
    logo: "/nedap.jpg",
    descrizione: "Nedap offre soluzioni avanzate per la gestione della sicurezza e dell'accesso."
  },
  {
    nome: "IRIS",
    logo: "/iris.jpg",
    descrizione: "IRIS, azienda di soluzioni e servizi di IT per tutti i settori industriali."
  }
];

const certificazioni = [
  {
    nome: "ISO 9001",
    logo: "/iso.png",
    descrizione: "Certificazione di qualità per i sistemi di gestione.",
    documento: "/pdf/intercert_v2.pdf" // Aggiungo il percorso al documento scaricabile
  },
  {
    nome: "F-GAS",
    logo: "/fgas.png",
    descrizione: "Certificazione per la gestione dei gas fluorurati."
  }
];
---

<Layout title="I nostri partners | Mistral Impianti" description="Scopri i partner e le certificazioni di Mistral Impianti. Collaborazioni con Siemens, Nedap, Vanderbilt e certificazioni di qualità.">
  <main class="px-4 pb-16" aria-label="Partners e Certificazioni">
  <section class="relative mx-auto mt-32 max-w-6xl overflow-hidden rounded-[2.5rem] border border-black/10 bg-black text-white" data-animate="fade-up">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.12),_transparent_60%)]"></div>
      <div class="relative grid gap-8 px-8 py-16 md:grid-cols-[1.1fr_0.9fr] md:px-16">
        <div class="space-y-4">
          <p class="text-xs uppercase tracking-[0.3em] text-white/60">Partnership</p>
          <h1 class="text-4xl font-semibold leading-tight">Collaborazioni con leader tecnologici.</h1>
          <p class="text-sm text-white/70">Mistral Impianti collabora con aziende internazionali per integrare sistemi avanzati e garantire soluzioni affidabili e scalabili.</p>
        </div>
        <div class="rounded-2xl border border-white/15 bg-white/5 p-6">
          <p class="text-xs uppercase tracking-[0.3em] text-white/60">Selezione accurata</p>
          <p class="mt-4 text-sm text-white/70">Ogni partnership è scelta per qualità, continuità di supporto e compatibilità con gli standard richiesti dai nostri clienti.</p>
        </div>
      </div>
    </section>

  <section aria-labelledby="partners-title" class="mx-auto mt-16 max-w-6xl" data-animate="fade-up">
      <h2 id="partners-title" class="text-3xl font-semibold text-black">I nostri partners</h2>
      <p class="mt-4 max-w-2xl text-sm text-zinc-600">Collaboriamo con produttori e fornitori che contribuiscono a progetti complessi in ambito industriale, sanitario e retail.</p>
      <div class="mt-10 grid gap-8 md:grid-cols-2">
        {partners.map((partner) => (
          <article class="group relative overflow-hidden rounded-[2rem] border border-black/10 bg-white p-8 shadow-[0_40px_80px_-60px_rgba(0,0,0,0.65)] transition-all hover:shadow-[0_40px_80px_-50px_rgba(0,0,0,0.85)] hover:-translate-y-1" aria-label={partner.nome}>
            <div class="flex h-24 w-24 items-center justify-center rounded-2xl border border-black/5 bg-gradient-to-br from-zinc-50 to-zinc-100 p-4 transition-transform group-hover:scale-105">
              <img src={partner.logo} alt={"Logo partner " + partner.nome} class="h-full w-full object-contain" loading="lazy" />
            </div>
            <h3 class="mt-6 text-2xl font-semibold text-black">{partner.nome}</h3>
            <p class="mt-3 text-sm leading-relaxed text-zinc-600">{partner.descrizione}</p>
          </article>
        ))}
      </div>
    </section>

  <section aria-labelledby="certificazioni-title" class="mx-auto mt-16 max-w-6xl" data-animate="fade-up">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
          <h2 id="certificazioni-title" class="text-3xl font-semibold text-black">Certificazioni</h2>
          <p class="mt-2 max-w-2xl text-sm text-zinc-600">Le nostre certificazioni attestano il costante impegno per la qualità, la sicurezza e l'aggiornamento normativo.</p>
        </div>
        <a href="/pdf/intercert_v2.pdf" download class="inline-flex items-center gap-2 rounded-full border border-black/10 px-4 py-2 text-xs font-medium uppercase tracking-[0.2em] text-black transition hover:bg-black hover:text-white" title="Scarica la certificazione ISO 9001">
          Scarica ISO 9001
        </a>
      </div>
      <div class="mt-10 grid gap-8 md:grid-cols-2">
        {certificazioni.map((cert) => (
          <article class="group rounded-[2rem] border border-black/10 bg-white p-8 shadow-[0_40px_80px_-60px_rgba(0,0,0,0.65)] transition-all hover:shadow-[0_40px_80px_-50px_rgba(0,0,0,0.85)]" aria-label={cert.nome}>
            <div class="flex h-24 w-24 items-center justify-center rounded-2xl border border-black/5 bg-gradient-to-br from-zinc-50 to-zinc-100 p-4 transition-transform group-hover:scale-105">
              <img src={cert.logo} alt={"Logo certificazione " + cert.nome} class="h-full w-full object-contain" loading="lazy" />
            </div>
            <h3 class="mt-6 text-2xl font-semibold text-black">{cert.nome}</h3>
            <p class="mt-3 text-sm leading-relaxed text-zinc-600">{cert.descrizione}</p>
            {cert.documento && (
              <div class="mt-6 flex flex-wrap gap-3 text-sm">
                <a
                  href={cert.documento}
                  download
                  class="inline-flex items-center gap-2 rounded-full border border-black/10 px-4 py-2 font-medium text-black transition hover:bg-black hover:text-white"
                  aria-label={"Scarica certificato " + cert.nome}
                  title={"Scarica certificato " + cert.nome}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4-4 4m0 0-4-4m4 4V4" />
                  </svg>
                  Scarica certificato
                </a>
                <a
                  href={cert.documento}
                  target="_blank"
                  rel="noopener"
                  class="inline-flex items-center gap-2 rounded-full border border-black/10 px-4 py-2 font-medium text-black transition hover:bg-black hover:text-white"
                  title={"Apri certificato " + cert.nome}
                >
                  Visualizza online
                </a>
              </div>
            )}
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>