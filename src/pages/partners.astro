---
import Layout from '../layouts/MainLayout.astro';

const partners = [
  {
    nome: "SIEMENS",
    logo: "/siemens.jpg",
    descrizione: "Siemens è un leader globale nella tecnologia e nell'ingegneria, fornendo soluzioni innovative per l'industria."
  },
  {
    nome: "VANDERBILT",
    logo: "/vanderbilt.jpg",
    descrizione: "VANDERBILT offre soluzioni di sicurezza e gestione degli accessi per una varietà di settori."
  },
  {
    nome: "NEDAP",
    logo: "/nedap.jpg",
    descrizione: "Nedap offre soluzioni avanzate per la gestione della sicurezza e dell'accesso."
  },
  {
    nome: "IRIS",
    logo: "/iris.jpg",
    descrizione: "IRIS, azienda di soluzioni e servizi di IT per tutti i settori industriali."
  }
];

const certificazioni = [
  {
    nome: "ISO 9001",
    logo: "/iso.png",
    descrizione: "Certificazione di qualità per i sistemi di gestione.",
    documento: "/pdf/intercert.pdf" // Aggiungo il percorso al documento scaricabile
  },
  {
    nome: "F-GAS",
    logo: "/fgas.png",
    descrizione: "Certificazione per la gestione dei gas fluorurati."
  }
];
---

<Layout title="I nostri partners | Mistral Impianti" description="Scopri i partner e le certificazioni di Mistral Impianti. Collaborazioni con Siemens, Nedap, Vanderbilt e certificazioni di qualità.">
  <main class="container mx-auto px-4 py-12" aria-label="Partners e Certificazioni">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 text-center">I nostri partners</h1>
    <p class="text-lg text-center max-w-3xl mx-auto mb-12">
      Mistral Impianti collabora con aziende leader nel settore per garantire 
      ai propri clienti soluzioni innovative e di alta qualità.
    </p>
    <section aria-labelledby="partners-title">
      <h2 id="partners-title" class="sr-only">Elenco partners</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
        {partners.map(partner => (
          <article class="border rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow" aria-label={partner.nome}>
            <div class="h-32 flex items-center justify-center mb-4">
              <div class="w-40 h-28 bg-gray-200 rounded flex items-center justify-center">
                <img src={partner.logo} alt={"Logo partner " + partner.nome} class="max-h-full object-contain" loading="lazy" /> 
              </div>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-center">{partner.nome}</h3>
            <p class="text-center">{partner.descrizione}</p>
          </article>
        ))}
      </div>
    </section>
    <h2 class="text-3xl md:text-4xl font-bold mt-12 mb-8 text-center">Certificazioni</h2>
    <p class="text-lg text-center max-w-3xl mx-auto mb-12">
      Le nostre certificazioni attestano il nostro impegno per la qualità e la sicurezza.
    </p>
    <section aria-labelledby="certificazioni-title">
      <h2 id="certificazioni-title" class="sr-only">Elenco certificazioni</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
        {certificazioni.map(cert => (
          <article class="border rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow" aria-label={cert.nome}>
            <div class="h-32 flex items-center justify-center mb-4">
              <div class="w-40 h-28 bg-gray-200 rounded flex items-center justify-center">
                <img src={cert.logo} alt={"Logo certificazione " + cert.nome} class="max-h-full object-contain" loading="lazy" /> 
              </div>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-center">{cert.nome}</h3>
            <p class="text-center mb-4">{cert.descrizione}</p>
            {cert.documento && (
              <div class="text-center mt-4">
                <a 
                  href={cert.documento} 
                  download
                  class="inline-flex items-center justify-center px-4 py-2 bg-black text-white rounded-md hover:bg-gray-700 transition-colors"
                  aria-label={"Scarica certificato " + cert.nome}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  Scarica certificato
                </a>
              </div>
            )}
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>